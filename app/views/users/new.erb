<%= form_for :user, url: '/users' do |f| %>
<%= f.label :username %>
<%= f.text_field :username, autofocus: true, placeholder: "username", required: "required" %>
<%= f.label :email %>
<%= f.email_field :email, autofocus: true, placeholder: "Email", :required => 'required' %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.label :confirm_password %>
<%= f.password_field :confirm_password %>
<%= f.submit "Submit" %><br><br>
<% end %>
Already have an account?<br>
<%= form_tag '/login' do %>
<%= text_field_tag :email %>
<%= password_field_tag :password %>
<%= submit_tag "Login" %>
<% end %>
