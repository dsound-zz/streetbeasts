<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username, autofocus: true %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :confirm_password %>
  <%= f.password_field :confirm_password %>
  Add Avatar: <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <%= f.submit "Update profile!" %><br>
  <%= button_to "Return to profile", user_path(@user), method: "get" %>
  <% end %>
<%= button_to "delete account", user_path(@user), method: "delete",
      data: { confirm: "Are you sure?" }%>
