<div class="row">
  <div class="medium-8 columns">

    <% if @animal.image.attached? %>
    <container>
      <%= image_tag @animal.image, class: "thumbnail", width: "600px", height: "350px" %>
    </container>
    <% else %>
      <% flash[:notice] = "No image yet" %><br>
    <% end %>

  </div>


  <div class="medium-4 columns">

  <p>Name: <%= @animal.name %></p>
  <p>Kingdom: <%= link_to @animal.kingdom %></p>
  <p>Phylum: <%= @animal.phylum %></p>
  <p>Class: <%= @animal.cls %> </p>
  <p>Order: <%= @animal.order %></p>
  <p>Family: <%= @animal.family %></p>
  <p>Genus: <%= @animal.genus %></p>
  <p>Species <%= @animal.species %></p>
  
  </div>
</div>
