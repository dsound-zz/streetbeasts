<!DOCTYPE html>
<html>
  <head>
    <title>StreetBeasts</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= button_to 'Beasts', animals_path, method: 'get' %>
    <%= button_to 'Posts', posts_path, method: 'get' %>

    <% if current_user %>
  
      Signed in as <%= current_user.username %>

      <%= button_to 'My Posts', user_path(current_user), method: 'get' %>
      <%= button_to 'Post', '/posts/new', method: 'get' %>
      <%= button_to 'Edit profile', edit_user_path(current_user.id), method:'get' %>
      <%= button_to 'Logout', '/logout', method: 'delete' %>
      <% else %>
      <%= button_to 'Login', '/login', method: 'get' %>
      <%= button_to 'Signup', '/signup', method: 'get' %>
      <% end %>

  <% if notice %>
     <%= notice %>
	<% end %>

	<% if alert %>
    <%= alert %>
	<% end %>

  <%= yield %>

  </body>
</html>
