

<div class="row medium-6 large-4 columns">
  <div class="blog-post">
    <% @posts.each do |post| %>


      <div class="callout animal_cards animal_card_thumbnail">
        <h4>Title: <%= link_to post.title, post_path(post) %><br>
          <small><%= post.created_at %> </small></h4>
          <% if post.image.attached? %>
          <%= link_to image_tag(post.image), post_path(post) %>
          <% end %>
          <ul class="menu simple">
            <li>User: <%= link_to post.user.username, user_path(post.user) %></li>
            <li>Likes: <%= post.likes %></li>
            <li>Comments: <%= post.comments.count %></li>

          </ul>
      </div>
      <% end %>



    </div>
  </div>
